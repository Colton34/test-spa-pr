{
  "name": "vue-single-page-scaffold",
  "version": "1.0.0",
  "description": "前端静态单页面脚手架",
  "author": "fe <fe@iyunxiao.com>",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "start": "cross-env NODE_ENV=development npm run lint && cross-env NODE_ENV=development npm run dev",
    "build:test": "rimraf dist && cross-env NODE_ENV=testing node build/build.js",
    "build": "rimraf dist && cross-env NODE_ENV=production node build/build.js",
    "lint": "cross-env npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "cross-env eslint --format node_modules/eslint-friendly-formatter --ext .js,.vue src test/unit/specs test/e2e/specs --fix",
    "lint:stylelint": "cross-env npm run lint:stylelint-less && npm run lint:stylelint-vue",
    "lint:stylelint-less": "stylelint 'src/**/*.less' --fix",
    "lint:stylelint-vue": "stylelint 'src/**/*.vue'",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "axios": "0.16.2",
    "element-ui": "2.4.3",
    "js-cookie": "2.1.4",
    "moment": "2.18.1",
    "vue": "2.5.17",
    "vue-router": "3.0.1",
    "vuex": "3.0.1",
    "vuex-router-sync": "5.0.0"
  },
  "devDependencies": {
    "@vue/eslint-config-standard": "3.0.1",
    "@vue/test-utils": "1.0.0-beta.24",
    "autoprefixer": "7.1.4",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-loader": "7.1.1",
    "babel-plugin-istanbul": "4.1.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-stage-2": "6.22.0",
    "chai": "4.1.2",
    "chalk": "2.1.0",
    "cross-env": "5.0.1",
    "css-loader": "0.28.7",
    "eslint": "4.15.0",
    "eslint-friendly-formatter": "3.0.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-vue": "4.0.0",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "1.1.5",
    "friendly-errors-webpack-plugin": "1.6.1",
    "html-webpack-plugin": "2.30.1",
    "karma": "1.4.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.1",
    "karma-mocha": "1.3.0",
    "karma-sinon-chai": "1.3.3",
    "karma-sourcemap-loader": "0.3.7",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "2.0.5",
    "less": "3.7.0",
    "less-loader": "4.1.0",
    "mocha": "3.2.0",
    "node-notifier": "5.1.2",
    "optimize-css-assets-webpack-plugin": "3.2.0",
    "ora": "1.2.0",
    "portfinder": "1.0.13",
    "postcss-loader": "2.0.8",
    "pre-commit": "1.2.2",
    "prerender-spa-plugin": "^3.4.0",
    "rimraf": "2.6.0",
    "semver": "5.3.0",
    "shelljs": "0.7.6",
    "sinon": "2.1.0",
    "sinon-chai": "2.14.0",
    "stylelint": "8.2.0",
    "stylelint-config-standard": "17.0.0",
    "stylelint-order": "0.8.1",
    "stylelint-processor-html": "1.0.0",
    "stylelint-webpack-plugin": "0.9.0",
    "url-loader": "0.5.8",
    "vue-loader": "14.2.3",
    "vue-style-loader": "4.0.1",
    "vue-template-compiler": "2.5.17",
    "webpack": "3.6.0",
    "webpack-bundle-analyzer": "2.9.0",
    "webpack-dev-server": "2.9.1",
    "webpack-merge": "4.1.0"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
